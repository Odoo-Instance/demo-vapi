<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
        <!-- Cron for send birthday wishes to employees -->
        <record id="employee_timesheet_notification_cron" forcecreate="True" model="ir.cron">
            <field name="name">Previous Week Timesheet Not Submitted: </field>
            <field name="model_id" ref="model_hr_employee"/>
            <field name="state">code</field>
            <field name="code">model.send_timesheet_reminder_notification()</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>

        <record id="email_timesheet_reminder_template" model="mail.template">
            <field name="name">Employee Timesheet Reminder Template</field>
            <field name="email_from">{{(user.email or '') }}</field>
            <field name="subject">Employee Timesheet Reminder</field>
             <field name="email_to">{{ (object.work_email) }}</field>
            <field name="model_id" ref="hr_timesheet.model_hr_employee" />
            <field name="auto_delete" eval="True" />
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px;font-size: 13px;">
                        Hello <t t-out="object.name"></t>,<br/>
                        You have seemed to have missed your timesheet submission for the
                        following week(s). Please submit asap.
                        <br/>
                         Note: This is an automated email. Please do not reply.
                       
                    </p>
                </div>
            </field>
           
        </record>
       
    </data>

</odoo>
